# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 120

# Tab indentation (no size specified)
[.gitconfig]
max_line_length = 72

[.justfile]
indent_size = 4

# Tab indentation (no size specified)
[{Makefile,*.mk}]
indent_style = tab

[*.yaml]
end_of_line = lf
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true

