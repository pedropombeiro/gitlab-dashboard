<%= tag.button(
  class: %w[btn btn-sm float-right],
  style: "--bs-btn-padding-y: 0; --bs-btn-padding-x: 0",
  data: {
    bs_toggle: "tooltip",
    bs_title: "Click to copy"
  },
  onclick: "navigator.clipboard.writeText('#{text}')") do %>
  <%= tag.i class: %w[fa fa-clipboard], aria: { hidden: "true" } %>
<% end %>
