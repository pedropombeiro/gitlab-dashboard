<nobr>
  <i class="fa-solid fa-code-branch"></i>
  <span><%= source_branch %></span>
  <button
    class="btn btn-sm float-right"
    style="--bs-btn-padding-y: 0; --bs-btn-padding-x: 0"
    data-bs-toggle="tooltip"
    data-bs-title="Click to copy"
    onclick="navigator.clipboard.writeText('<%= source_branch %>')"
  >
    <i class="fa fa-clipboard" aria-hidden="true"></i>
  </button>
</nobr>
<% if %w[master main].exclude?(target_branch) %>
  <br/>
  <nobr>
    <i class="fa-solid fa-arrow-right text-success"></i>&nbsp;<i class="fa-solid fa-code-branch"></i>
    <% if @open_merge_requests.any? { |other_mr| other_mr.sourceBranch == target_branch && other_mr.autoMergeEnabled } %>
      <abbr data-bs-toggle="tooltip" data-bs-title="Auto-merge is enabled">ðŸš€</abbr>
    <% end %>
    <span><%= target_branch %></span>
    <button
      class="btn btn-sm float-right"
      style="--bs-btn-padding-y: 0; --bs-btn-padding-x: 0"
      data-bs-toggle="tooltip"
      data-bs-title="Click to copy"
      onclick="navigator.clipboard.writeText('<%= target_branch %>')"
    >
      <i class="fa fa-clipboard" aria-hidden="true"></i>
    </button>
  </nobr>
<% end %>
