<% if local_assigns[:timestamp] %>
  <%= local_relative_time(
    local_assigns[:timestamp],
    type: "time-ago",
    data: {
      bs_toggle: "tooltip",
      bs_custom_class: "wide-tooltip",
    },
    class:
      (
        if local_assigns[:age_warning] && timestamp.before?(2.weeks.ago)
          "text-danger"
        end
      ),
  ) -%>
<% else %>
  Never
<% end %>
