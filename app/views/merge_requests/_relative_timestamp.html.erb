<% if local_assigns[:timestamp] %>
  <%= render "icon_with_title",
  content: "#{time_ago_in_words(timestamp)} ago",
  class: local_assigns[:age_warning] && Time.now - timestamp > 2.weeks ? "text-danger" : nil,
  title: timestamp.localtime.to_formatted_s(:long_ordinal) %>
<% else %>
  N/A
<% end %>
