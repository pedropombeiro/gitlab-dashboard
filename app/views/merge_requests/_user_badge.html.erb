<%= tag.span(
  class: %W[badge shadow bg-gradient bg-review-#{class_suffix} text-review-#{class_suffix}],
  data: {
    bs_toggle: "tooltip",
    bs_custom_class: "wide-tooltip",
    bs_html: "true",
    bs_title: title
  }) do %>
  <%= render "user_image", user: user %>
  <%= link_to(
    user.username,
    user.webUrl,
    target: "_blank",
    class: %W[bg-transparent text-review-#{class_suffix}],
  ) %>
  <%= user_emoji_character(user.status&.emoji) %>
  <% if user.status&.availability == "BUSY" %>
    <%= render "shared/abbr_with_title", content: "ðŸ”´", title: user.status&.availability %>
  <% end %>

  <% country_flag_classes = user_country_flag_classes(user) %>
  <%= tag.span(class: country_flag_classes) if country_flag_classes %>

  <%= yield %>
<% end %>
