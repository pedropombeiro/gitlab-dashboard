<%= tag.span(
  class: %w[badge bg-info text-light],
  data: {
    bs_toggle: "tooltip",
    bs_custom_class: "wide-tooltip",
    bs_html: "true",
    bs_title: user_help_title(user)
  }) do %>
  <%= image_tag(
    make_full_url(user.avatarUrl),
    size: 16,
    class: %w[rounded float-left],
  ) %>
  <%= link_to(
    user.username,
    user.webUrl,
    target: "_blank",
    class: %w[bg-info text-light],
  ) %>
  <% if user.status&.availability == "BUSY" %>
    <%= render "icon_with_title", content: "ðŸ”´", title: user.status&.availability %>
  <% end %>
<% end %>
