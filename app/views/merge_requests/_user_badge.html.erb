  class: %w[badge shadow bg-gradient bg-info text-light],
  data: {
    bs_toggle: "tooltip",
    bs_custom_class: "wide-tooltip",
    bs_html: "true",
    bs_title: user_help_title(user)
  }) do %>
  <%= render "user_image", user: user %>
  <%= link_to(
    user.username,
    user.webUrl,
    target: "_blank",
    class: %w[bg-info text-light],
  ) %>
