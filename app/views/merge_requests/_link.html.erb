<nobr data-controller="clipboard">
  <%= link_to title,
  web_url,
  **{
    data: {
      clipboard_target: "source",
      bs_toggle: "tooltip",
      bs_custom_class: "x-wide-tooltip",
      bs_title: web_url,
    },
    target: "_blank",
  }.deep_merge(local_assigns.except(:title, :web_url) || {}) -%>

  <%= render "clipboard_button" %>
</nobr>
