<table class="table table-hover mb-0" style="cursor: pointer;">
  <% any_conflicts = merge_requests.any?(&:conflicts) %>

  <caption class="ms-1">
    <div class="d-flex justify-content-between align-items-baseline">
      <% if merge_requests.count.positive? %>
        <div class="lead">
          <%= pluralize(merge_requests.count, "merge request") %>, open for an average of
          <%= distance_of_time_in_words(
            ActiveSupport::Duration.build(
              merge_requests.sum { |mr| Time.now - mr.createdAt } / merge_requests.count,
            ),
          ) %>.
        </div>
      <% end %>

      <div class="text-secondary small">
        Fetched in
        <%= @request_duration -%>
        seconds
        <%= render "relative_timestamp", timestamp: @updated_at %>.
        <% if @next_update %>
          <span>Cached until
            <%= @next_update.localtime.to_formatted_s(:time) -%>.</span>
        <% else %>
          <span>Not cached.</span>
        <% end %>
      </div>
    </div>
  </caption>

  <thead>
    <tr>
      <th scope="col">ID</th>
      <th scope="col">Created</th>
      <th scope="col">Updated&nbsp;â†“</th>
      <th scope="col">Status</th>
      <th scope="col" class="text-center"><i class="fa-solid fa-timeline"></i></th>
      <th scope="col">Title</th>
      <th scope="col" class="text-center"><%= tag.i(
          class: %w[fa-solid fa-angles-down],
          data: {
            bs_toggle: "tooltip",
            bs_title: "Squash?",
          },
        ) %>
      </th>
      <% if any_conflicts %>
        <th scope="col">Conflicts?</th>
      <% end %>
      <th scope="col" class="text-center"><%= tag.i class: %w[fa-regular fa-thumbs-up], title: "Approvals" %></th>
      <th scope="col" class="text-center"><%= tag.i class: %w[fa-solid fa-magnifying-glass] %>
        Reviewers</th>
      <th scope="col">Associated Issue</th>
    </tr>
  </thead>

  <tbody>
    <% merge_requests.each do |mr| %>
      <%= tag.tr do %>
        <!-- MR ID -->
        <th scope="row">
          <%= render "link", title: mr.reference, web_url: mr.webUrl %>
        </th>
        <!-- Created at -->
        <td>
          <%= render "relative_timestamp",
          timestamp: mr.createdAt,
          age_warning: true,
          most_significant_only: true %>
        </td>
        <!-- Updated at -->
        <td>
          <%= render "relative_timestamp",
          timestamp: mr.updatedAt,
          most_significant_only: true %>
        </td>
        <!-- Merge status -->
        <td>
          <%= render(
            "label",
            title: mr.mergeStatusLabel,
            class: ["bg-#{mr.bootstrapClass[:mergeStatus]}"],
          ) %>
          <% if mr.blockingMergeRequests&.visibleMergeRequests %>
            <% open_blockers =
              mr.blockingMergeRequests.visibleMergeRequests.filter do |blocker|
                blocker.state == "opened"
              end %>

            <% if open_blockers.count.positive? %>
              <%= render "abbr_with_title",
              content: tag.i(class: %w[fa-solid fa-road-barrier]),
              class: "text-danger",
              title:
                "This MR is blocked by #{pluralize(open_blockers.count, "merge request")}: " \
                  "#{open_blockers.map { |mr| "!#{mr.iid}" }.join(", ")}" %>
            <% end %>
          <% end %>
        </td>
        <!-- Pipeline -->
        <td>
          <nobr>
            <% pipeline = mr.headPipeline %>

            <% if pipeline %>
              <% failed_jobs = pipeline.failedJobs.nodes %>

              <%= tag.span(class: %w[badge badge-pill] + ["bg-#{mr.bootstrapClass[:pipeline]}"]) do %>
                <%= link_to humanized_enum(pipeline.status) || "??",
                pipeline.webUrl,
                class: "text-light",
                target: "_blank",
                **(
                  if pipeline.summary
                    {
                      title: pipeline.summary,
                      data: {
                        bs_toggle: "tooltip",
                        bs_html: "true",
                        bs_custom_class: "x-wide-tooltip",
                      },
                    }
                  else
                    {}
                  end
                ) %>
              <% end %>

              <% if failed_jobs.any? && %w[SUCCESS FAILED].exclude?(pipeline.status) %>
                <%= link_to(pipeline.webUrl, target: "_blank", style: [ "text-decoration: none" ]) do %>
                  <%= render "abbr_with_title",
                  content: tag.i(class: %w[fa-solid fa-triangle-exclamation]),
                  title: pipeline.failureSummary,
                  class: "text-warning",
                  data: {
                    bs_html: "true",
                    bs_custom_class: "x-wide-tooltip",
                  } %>
                <% end %>
              <% end %>
              <% if pipeline.failureReason %>
                <%= render "abbr_with_title",
                content: tag.i(class: %w[fa-solid fa-comment-dots]),
                class: "text-warning",
                title: pipeline.failureReason,
                data: {
                  bs_html: "true",
                  bs_custom_class: "x-wide-tooltip",
                } %>
              <% end %>
              <% if pipeline.startedAt %>
                <% if pipeline.finishedAt.nil? %>
                  <%= render "relative_timestamp", timestamp: pipeline.startedAt %>
                <% elsif pipeline.finishedAt < 8.hours.ago %>
                  <%= render "abbr_with_title",
                  content: "ðŸ¥¶",
                  title: "Pipeline too old, must be re-run before being merged" %>
                <% end %>
              <% end %>
            <% end %>

            <% if mr.autoMergeEnabled %>
              <%= render "abbr_with_title", content: "ðŸš€", title: "Auto-merge is enabled" %>
            <% end %>
          </nobr>

          <br/>

          <%= render partial: "gitlab_label",
          spacer_template: "space",
          collection: mr.contextualLabels,
          as: :label %>
        </td>
        <!-- Title -->
        <td>
          <%= render partial: "user_avatar", collection: mr.assignees.nodes, as: :user %>

          <%= link_to mr.titleHtml, mr.webUrl, target: "_blank" %>

          <div style="max-width: 26em">
            <%= render "branch_relation",
            source_branch: mr.sourceBranch,
            target_branch: mr.targetBranch %>
          </div>
        </td>
        <!-- Squash on merge -->
        <td class="text-center">
          <% if mr.squashOnMerge %>
            <%= render "abbr_with_title",
            content: tag.i(class: %w[align-middle fa-solid fa-angles-down]),
            title: "MR set to squash on merge",
            class: "text-success" %>
          <% end %>
        </td>
        <!-- Conflicts -->
        <% if any_conflicts %>
          <td class="text-center">
            <% if mr.conflicts %>
              <%= render "abbr_with_title",
              content: tag.i(class: %w[fa-solid fa-burst]),
              class: "align-middle text-danger",
              title: "MR branch has conflicts and should be rebased" %>
            <% end %>
          </td>
        <% end %>
        <!-- Approvals -->
        <td class="text-end">
          <% if mr.approved %>
            <%= render "abbr_with_title",
            content: tag.i(class: %w[fa-regular fa-thumbs-up]),
            class: "align-middle text-success",
            title: "Approved" %>
          <% else %>
            <%= tag.progress(
              value: mr.approvalsRequired - mr.approvalsLeft,
              max: mr.approvalsRequired,
              style: "width: 20px",
              class: "align-middle",
              data: {
                bs_toggle: "tooltip",
                bs_title: "#{pluralize(mr.approvalsLeft, "approval")} missing",
              },
            ) %>
          <% end %>
        </td>
        <!-- Reviewers -->
        <td>
          <%= render(
            partial: "reviewer_badge",
            spacer_template: "space",
            collection: mr.reviewers.nodes,
            as: :reviewer,
          ) || "Not assigned" %>
        </td>
        <!-- Associated Issue -->
        <td scope="row">
          <% if mr.issue %>
            <%= render "link",
            title: "\##{mr.issue.iid}",
            web_url: mr.issue.webUrl,
            data: {
              bs_toggle: "tooltip",
              bs_html: "true",
              bs_custom_class: "x-wide-tooltip",
              bs_title: mr.issue.titleHtml,
            } %>
          <% end %>
        </td>
      <% end %>
    <% end %>
  </tbody>
</table>
