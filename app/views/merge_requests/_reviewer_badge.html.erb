<% show_emojis = reviewer.mergeRequestInteraction.reviewState != "APPROVED" %>
<% reviewer_presenter = ReviewerPresenter.new(reviewer, self) %>

<%= render "shared/user_badge",
  user: reviewer,
  user_presenter: reviewer_presenter,
  content: reviewer_presenter.help_content,
  show_emojis: show_emojis,
  bg_class: "bg-review-#{reviewer.bootstrapClass[:badge]}",
  text_class: "text-review-#{reviewer.bootstrapClass[:badge]}" do %>
  <%= tag.i class: reviewer.bootstrapClass[:icon] %>
  <% if show_emojis && reviewer.bootstrapClass[:activity_icon] %>
    <%= tag.i class: reviewer.bootstrapClass[:activity_icon] %>
  <% end %>
<% end %>
