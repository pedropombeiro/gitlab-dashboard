<script>
  var link = document.querySelector("link[rel~='icon']");
  if (!link) {
    link = document.createElement('link');
    link.rel = 'icon';
    document.head.appendChild(link);
  }
  link.href = "<%= make_full_url(@user.avatarUrl) %>";
</script>

<% vapid_public_key = Rails.application.credentials.dig(:webpush, :vapid_public_key) %>
<% if vapid_public_key.present? %>
  <meta name="web_push_public_key" content="<%= Base64.urlsafe_decode64(vapid_public_key).bytes %>" />
<% end %>

<script
  src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.10.2/dist/umd/popper.min.js"
  integrity="sha384-7+zCNj/IqJ95wo16oMtfsKbZ9ccEh31eOz1HGyDuCQ6wgnyJNSYdrPa03rtR1zdB"
  crossorigin="anonymous"
></script>
<script
  src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js"
  integrity="sha384-QJHtvGhmr9XOIpI6YVutG+2QOK9T+ZnN4kzFN1RtK3zEFEIsxhlmWl5/YESvpZ13"
  crossorigin="anonymous"
></script>

<div class="container-fluid" style="margin:0 !important; padding:0 !important;">
  <nav
    class="
      navbar navbar-expand-sm navbar-light bg-dark fixed-top justify-content-center
    "
  >
    <span class="navbar-brand d-flex align-items-center mb-0 ms-2 h1 text-light fw-lighter">
      <span class="d-flex d-sm-none me-2">
        <%= render "user_image", user: @user, size: 24 %>
      </span>
      Merge Requests Dashboard
      <span class="collapse navbar-collapse">
        &nbsp;for&nbsp;
        <%= render "user_image", user: @user, size: 24 %>&nbsp;
        <%= link_to @user.username, @user.webUrl, class: "fw-light" %>
      </span>
    </span>

    <button id="enable_notifications_button" class="btn d-none text-light"><i class="fa-solid fa-bell"></i></button>
  </nav>

  <%= turbo_frame_tag "merge_requests", src: "/mrs/#{params[:assignee]}/list" do %>
    <div
      class="
        shadow rounded p-4 mb-5 bg-body bg-gradient text-dark position-absolute top-50
        start-50 translate-middle d-flex justify-content-center align-items-center
      "
    >
      <div class="spinner-border me-3" role="status" aria-hidden="true"></div>
      <div>
        <span>Loading merge requestsâ€¦</span>
        <% if @dto.has_content? %>
          <span>(last fetched
            <%= render("relative_timestamp", timestamp: @dto.updated_at) -%>)</span>
        <% end %>
      </div>
    </div>

    <% if @dto.has_content? %>
      <!-- Show last stored state, while we wait for the refreshed state -->
      <%= render "user_merge_requests",
      open_merge_requests: @dto.open_merge_requests,
      merged_merge_requests: @dto.merged_merge_requests %>
    <% end %>
  <% end %>
</div>
