{
  "*": {
    "make": "rake",
    "start": "bin/dev"
  },
  "spec/*_spec.rb": {
    "dispatch": "rspec {file}"
  },
  "app/assets/stylesheets/*": {
    "type": "css"
  },
  "app/controllers/*.rb": {
    "type": "controller",
    "alternate": "spec/controllers/{}_spec.rb"
  },
  "app/dtos/*.rb": {
    "type": "dto",
    "alternate": "spec/dtos/{}_spec.rb"
  },
  "app/models/*.rb": {
    "type": "model",
    "alternate": "spec/models/{}_spec.rb"
  },
  "specs/models/*.rb": {
    "type": "model",
    "alternate": "app/models/{}.rb"
  },
  "app/views/*/*.html.erb": {
    "type": "view",
    "alternate": "app/controllers/{}_controller.rb"
  },
  "app/views/**/_*.html.erb": {
    "type": "partial"
  },
  "spec/controllers/*_spec.rb": {
    "type": "controller",
    "alternate": "app/controllers/{}.rb"
  },
  "spec/dtos/*_dto_spec.rb": {
    "type": "spec",
    "alternate": "app/dtos/{}_dto.rb"
  },
  "spec/models/*_spec.rb": {
    "type": "spec",
    "alternate": "app/models/{}.rb"
  }
}
