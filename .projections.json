{
  "*": {
    "make": "rake",
    "start": "bin/dev"
  },
  "spec/*_spec.rb": {
    "dispatch": "rspec {file}"
  },
  "app/assets/stylesheets/*": {
    "type": "css"
  },
  "app/controllers/*_controller.rb": {
    "type": "controller",
    "alternate": "app/views/{}/index.html.erb"
  },
  "app/models/*.rb": {
    "type": "model",
    "alternate": "app/controllers/{}_controller.rb"
  },
  "app/views/*/index.html.erb": {
    "type": "view",
    "alternate": "app/controllers/{}_controller.rb"
  },
  "app/views/**/_*.html.erb": {
    "type": "partial"
  }
}
