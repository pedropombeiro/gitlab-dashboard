{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:best-practices",
    ":automergeStableNonMajor",
    ":automergeRequireAllStatusChecks",
    ":enablePreCommit",
    ":pinSkipCi",
    ":prImmediately",
    ":separateMultipleMajorReleases",
    "group:nodeJs",
    "group:rubyOnRails",
    "schedule:automergeNonOfficeHours"
  ],
  "automergeType": "pr",
  "automergeStrategy": "squash",
  "enabledManagers": ["bundler", "npm", "github-actions", "dockerfile", "ruby-version", "nodenv", "custom.regex"],
  "lockFileMaintenance": { "enabled": true },
  "packageRules": [
    {
      "description": "Disable digest-only updates for Docker and GitHub Actions updates",
      "matchDatasources": ["docker", "github-actions"],
      "digest": {
        "enabled": false
      }
    },
    {
      "description": "Auto-merge non-breaking GitHub Actions updates (patch and minor versions only) as a grouped PR",
      "matchManagers": ["github-actions"],
      "matchUpdateTypes": ["patch", "minor"],
      "automerge": true,
      "groupName": "GitHub Actions"
    },
    {
      "description": "Auto-merge linter and test framework package updates directly to branch without creating a PR",
      "automerge": true,
      "automergeType": "branch",
      "extends": ["packages:linters", "packages:test"]
    },
    {
      "description": "Group Docker base image updates",
      "matchManagers": ["dockerfile"],
      "matchUpdateTypes": ["minor", "patch"],
      "groupName": "Docker images",
      "automerge": true
    },
    {
      "description": "Group all npm package updates (dependencies and devDependencies) into a single PR",
      "matchManagers": ["npm"],
      "matchUpdateTypes": ["patch", "minor"],
      "groupName": "npm dependencies",
      "automerge": true
    },
    {
      "description": "Separate major npm updates into individual PRs for review",
      "matchManagers": ["npm"],
      "matchUpdateTypes": ["major"],
      "automerge": false
    },
    {
      "description": "Group all gem updates (except Rails) into a single PR",
      "matchManagers": ["bundler"],
      "matchUpdateTypes": ["patch", "minor"],
      "groupName": "Ruby gems",
      "automerge": true,
      "matchPackageNames": ["!rails"]
    },
    {
      "description": "Separate major gem updates into individual PRs for review",
      "matchManagers": ["bundler"],
      "matchUpdateTypes": ["major"],
      "automerge": false,
      "lockFileMaintenance": {
        "enabled": true
      }
    },
    {
      "description": "Ensure Yarn lockfile is updated (npm manager handles both npm and yarn)",
      "matchManagers": ["npm"],
      "rangeStrategy": "bump",
      "lockFileMaintenance": {
        "enabled": true
      }
    }
  ],
  "customManagers": [
    {
      "customType": "regex",
      "description": "Update NODE_VERSION in Dockerfile",
      "managerFilePatterns": ["/^Dockerfile$/"],
      "matchStrings": ["ARG NODE_VERSION=(?<currentValue>.*?)\\n"],
      "datasourceTemplate": "node-version",
      "depNameTemplate": "node"
    }
  ],
  "prConcurrentLimit": 10,
  "prHourlyLimit": 0,
  "platformAutomerge": true
}
